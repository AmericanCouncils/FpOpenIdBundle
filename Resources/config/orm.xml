<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="fp_openid.model.identity_manager.class">Fp\OpenIdBundle\Entity\IdentityManager</parameter>
    </parameters>

    <services>
        <service id="fp_openid.model.identity_manager" class="%fp_openid.model.identity_manager.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument>%fp_openid.model.identity.class%</argument>
        </service>
    </services>

</container>